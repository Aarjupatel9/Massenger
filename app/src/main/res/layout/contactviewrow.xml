<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contactViewRowCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_contact_row_ripple_effect"
    android:background="?android:attr/selectableItemBackground"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contactViewRowConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:theme="@style/contactRowMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/DPImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            style="@style/contactRowMainImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/b_user_image" />

        <TextView
            android:id="@+id/Display_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/new_massege_arrive_value"
            app:layout_constraintStart_toEndOf="@+id/DPImageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/LastMassegeOfContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/new_massege_arrive_value"
            app:layout_constraintStart_toEndOf="@+id/DPImageButton"
            app:layout_constraintTop_toBottomOf="@+id/Display_Name"
            app:layout_constraintVertical_bias="0.687" />

        <TextView
            android:id="@+id/new_massege_arrive_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@color/new_massege_arrive_colour"
            android:text=""
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
